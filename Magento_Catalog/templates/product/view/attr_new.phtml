$_product = $block->getProduct();

$_attributeLabel = $_product->getResource()->getAttribute('raww_new');

$_attributeLabel = $_attributeLabel->getFrontend()->getValue($_product);
if ($_attributeLabel) {
    if (strtolower($_attributeLabel) == 'new') { ?>
        <div class="raww-new">
            <span>
               <?= $_attributeLabel ?>
            </span>
        </div>
    <?php } elseif (strtolower($_attributeLabel) == 'new shade') { ?>
        <div class="raww-newshade">
            <span>
                <? $_attributeLabel ?>
            </span>
        </div>
    <?php }
} else { ?>
    <div class="not-rawnew">
        <span>
           <?= '' ?>
        </span>
    </div>
<?php }
