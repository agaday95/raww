<page layout="1column"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <container name="category.view.group" htmlTag="div" htmlClass="category-view__group" after="-" />

        <move element="category.view.container" destination="page.top" after="-" />
        <move element="category.view.group" destination="category.view.container"/>
        <move element="page.main.title" destination="category.view.group"/>
        <move element="category.description" destination="category.view.group"/>
    </body>
</page>